<UserControl x:Class="trustid.MacManScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:trustid"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="168*"/>
            <RowDefinition Height="85"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Macro Manipulation with Certificate Doubling" FontSize="15"  FontWeight="Bold" Foreground="#2980B9" Margin="39,40,285,53" Grid.ColumnSpan="2" />
        <TextBlock
                Foreground="Black"
                FontSize="11"
                
                FontWeight="Bold"
                FontFamily="Fonts/Roboto/#Roboto-Regular" Margin="43,78,19,11" Grid.RowSpan="3"
                        ><LineBreak/><Run Text="In this attack, you will be a part of a scenario. The whole idea is that"/><LineBreak/><Run Text="you the victim has a signed document, which is already trusted by "/><LineBreak/><Run Text="the machine. This document will be open on LibreOffice to see the"/><LineBreak/><Run Text="contents of it. You should then close the file."/><LineBreak/><Run/><LineBreak/><Run Text="Then us, the attackers, will modify the file with our code, spoofing "/><LineBreak/><Run Text="it with some macros behind to run. The file will be opened again and you will see"/><LineBreak/><Run Text="that the content is different. Here you can see that the signature is not "/><LineBreak/><Run Text="valid."/><LineBreak/><Run/><LineBreak/><Run Text="Then in the next step we executing again some malicious code making the "/><LineBreak/><Run Text="file seems that is trusted by an original authentic entity but in reality is"/><LineBreak/><Run Text="signed by us."/><LineBreak/><Run/><LineBreak/><Run Text="The modified file is trusted now by the machine."/><LineBreak/><Run/><LineBreak/><Run Text="First Please select a macro."/><LineBreak/><LineBreak/><Run/></TextBlock>
        <Button x:Name="Scenario" Content="Begin Scenario"
            Foreground="White"
            FontSize="12"
            Margin="174,87,129,-72" Grid.RowSpan="2" Grid.Row="1" Click="Scenario_Click" Grid.ColumnSpan="2"
                        >

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="TextElement.FontFamily" Value="Fonts/Roboto/#Roboto-Regular"/>
                    <Setter Property="Background" Value="green"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Gray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="100" Height="25"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <TextBlock Text="First Select a macro" FontSize="15"  FontWeight="Bold" Foreground="#2980B9" Margin="59,41,-235,52" Grid.Column="1" />
        <Button x:Name="MacroOne" Content="Downloader"
            Foreground="White"
            FontSize="12"
            Margin="24,56,78,30" Click="MacroOne_Click_1" Grid.Column="1"
                        >

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="TextElement.FontFamily" Value="Fonts/Roboto/#Roboto-Regular"/>
                    <Setter Property="Background" Value="#2980B9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Gray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="100" Height="25"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name="MacroTwo_Copy" Content="Enumeration"
            Foreground="White"
            FontSize="12"
            Margin="27,129,75,120"  Grid.RowSpan="2" Click="MacroTwo_Copy_Click" Grid.Column="1"
                        >

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="TextElement.FontFamily" Value="Fonts/Roboto/#Roboto-Regular"/>
                    <Setter Property="Background" Value="#2980B9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Gray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="100" Height="25"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name="MacroTwo_Copy1" Content="Key Logger"
            Foreground="White"
            FontSize="12"
            Margin="28,13,74,41" Grid.Row="1" Click="MacroTwo_Copy1_Click" Grid.Column="1"
                        >

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="TextElement.FontFamily" Value="Fonts/Roboto/#Roboto-Regular"/>
                    <Setter Property="Background" Value="#2980B9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Gray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="100" Height="25"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name="MacroTwo_Copy2" Content="Metasploit"
            Foreground="White"
            FontSize="12"
            Margin="27,75,75,57" Grid.Row="1" Grid.RowSpan="2" Click="MacroTwo_Copy2_Click" Grid.Column="1"
                        >

            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="TextElement.FontFamily" Value="Fonts/Roboto/#Roboto-Regular"/>
                    <Setter Property="Background" Value="#2980B9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Gray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="100" Height="25"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>
    </Grid>
</UserControl>
